.container
  .header_row
    .header_left
      = link_to new_post_path do
        %i.fa-regular.fa-camera
    .header_right
      = render 'commons/dropdown'

  .posts
    - posts.each do |post|
      .post.js-post{ id: "post-#{post.id}", data: { post_id: post.id} }
        .post_meta
          .post_icon
            = link_to account_path(post.user) do
              = image_tag post.user.avatar_image
          .post_info
            .post_author_upper
              = post.user.account
            .post_time-ago
              = post.time_ago_display

        = render 'commons/images', post: post

        .post_actions
          .post_like.hidden.active-heart
            = image_tag 'heart-active.svg'
          .post_like.hidden.inactive-heart
            = image_tag 'heart.svg'
          .post_comment
            = link_to post_comments_path(post) do
              = image_tag 'comment.png'
          .post_share
            - share_url = polymorphic_url(post, host: request.base_url)
            = link_to "https://twitter.com/share?#{ {url: share_url}.to_query }", target: '_blank' do
              = image_tag 'share.png'
        .post_liked-by
          = post.display_like_count
        .post_text
          .post_author_lower
            = post.user.account
          .post_content
            = post.content
