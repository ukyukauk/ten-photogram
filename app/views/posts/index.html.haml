          .post_time-ago 3 hours ago
      .post_images
        .image-large
          = image_tag 'post_img-main.png'
        .image-small.top
          = image_tag 'post_img-sub_upper'
        .image-small.bottom
          = image_tag 'post_img-sub_lower'
      .post_actions
        = image_tag 'heart-active.svg', class: 'post_like'
